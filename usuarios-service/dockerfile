# Imagen base: Python
FROM python:3.10-slim

# Copiamos los archivos del servicio
WORKDIR /app
COPY . /app

# Instalamos las dependencias que est√©n en requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Exponemos el puerto (debe coincidir con el del servicio)
EXPOSE 5001

# Ejecutamos la app
CMD ["python", "app.py"]
